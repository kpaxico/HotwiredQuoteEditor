<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - Hotwired Quote Editor</title>
  <script src="~/dist/app.js" defer></script>
  <link rel="stylesheet" href="~/dist/app.css" />
</head>
<body class="bg-[#fcfaf7]">
  <header class="p-2 flex items-center">
    <img src="~/dist/images/logo.png" runat="server" width="40px" class="flex-none">
    <h1>Hotwired ASP.NET Core Quote Editor</h1>
  </header>
  <div class="container">
    <main role="main" class="pb-3">
      @RenderBody()
    </main>
  </div>
</body>
</html>